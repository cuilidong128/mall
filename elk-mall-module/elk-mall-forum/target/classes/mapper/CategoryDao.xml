<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.forum.dao.CategoryDao">
    <resultMap type="com.mall.forum.modle.Category" id="BaseResultMap">
        <result property="id" column="category_id" jdbcType="BIGINT"/>
        <result property="displayOrder" column="category_order" jdbcType="INTEGER"/>
        <result property="moderated" column="category_moderated" jdbcType="BOOLEAN"/>
        <result property="name" column="category_title" jdbcType="VARCHAR"/>

        <collection property="forums"
                    resultMap="com.mall.forum.dao.ForumDao.BaseResultMap" />

    </resultMap>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT category_id, category_title, category_order, category_moderated FROM jforum_categories ORDER BY category_order ASC
    </select>

    <select id="selectById" resultMap="BaseResultMap">
       SELECT category_id, category_title, category_order, category_moderated FROM jforum_categories WHERE categories_id = #{categoriesId} ORDER BY category_title
    </select>




    <select id="canDelete" resultType="boolean">
        SELECT COUNT(1) AS total FROM jforum_forums WHERE category_id = #{categoryId}
    </select>

    <select id="getMaxOrder" resultType="int">
      SELECT MAX(display_order) FROM jforum_categories
    </select>

    <delete id="delete" >
      DELETE FROM jforum_categories WHERE category_id = #{categoryId}
    </delete>

    <update id="update" parameterType="com.mall.forum.modle.Category">
        UPDATE jforum_categories
        <set>
            <if test="title != null">`category_title` = #{title}, </if>
            <if test="moderated != null">`moderated` = #{moderated}</if>
        </set>
        WHERE categories_id = #{categoriesId}
    </update>

    <update id="setOrderById">
        UPDATE jforum_categories
        <set>
            <if test="displayOrder != null">`category_order` = #{displayOrder} </if>
        </set>
        WHERE categories_id = #{categoriesId}
    </update>



    <insert id="addNew" parameterType="com.mall.forum.modle.Category" useGeneratedKeys="true" keyProperty="id">
        insert into jforum_categories
        (
        `category_title`,
        `category_order`,
        `category_moderated`
        )
        values
        (
        #{name},
        #{displayOrder},
        #{moderated}
        )
    </insert>

</mapper>