<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.forum.dao.ConfigDao">
    <resultMap type="com.mall.forum.modle.Config" id="BaseResultMap">
        <result property="id" column="config_id" jdbcType="BIGINT"/>
        <result property="name" column="config_name" jdbcType="VARCHAR"/>
        <result property="value" column="config_value" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT config_name, config_value, config_id FROM jforum_config
    </select>

    <select id="selectById" resultMap="BaseResultMap">
       SELECT config_name, config_value FROM jforum_config WHERE config_id = #{configId}
    </select>

    <select id="selectByName" resultMap="BaseResultMap">
       SELECT config_name, config_value, config_id FROM jforum_config WHERE config_name = #{name}
    </select>

    <delete id="delete" >
      DELETE FROM jforum_config WHERE config_id = #{configId}
    </delete>

    <update id="updateConfig" parameterType="com.mall.forum.modle.Config">
        UPDATE jforum_config
        <set>
            <if test="value != null">`config_value` = #{value} </if>

        </set>
        WHERE config_name = #{name}
    </update>

    <insert id="addNew" parameterType="com.mall.forum.modle.Config" useGeneratedKeys="true" keyProperty="id">
        insert into jforum_config
        (
        `config_name`,
        `config_value`
        )
        values
        (
        #{name},
        #{value}
        )
    </insert>

</mapper>