<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mall.system.dao.SysRoleMenuDao">
<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.mall.system.model.SysRoleMenu" id="BaseResultMap">
        <result property="id" column="id" jdbcType="BIGINT"/>
        <result property="roleId" column="role_id" jdbcType="BIGINT"/>
        <result property="menuId" column="menu_id" jdbcType="BIGINT"/>
        <result property="params" column="params" jdbcType="VARCHAR"/>
    </resultMap>

	<insert id="save">
		insert into sys_role_menu
		(
			`role_id`, 
			`menu_id`
		)
		values
		<foreach collection="menuIdList" item="item" index="index" separator="," >
		(
			#{roleId}, 
			#{item} 
		)
		</foreach>
	</insert>
	
	<update id="update" parameterType="map">
		update sys_role_menu 
		<set> 
			<if test="params != null">`params` = #{params} </if>
		</set>
		where role_id = #{roleId} and menu_id = #{menuId} 
	</update>
	
	<delete id="delete">
		delete from sys_role_menu where role_id = #{value}
	</delete>
	
	<select id="queryMenuIdList" resultType="long">
		select menu_id from sys_role_menu where role_id = #{value}
	</select>
	
	<select id="queryParamsList" resultType="com.mall.system.model.SysRoleMenu">
		select * from sys_role_menu where role_id = #{value}
	</select>

</mapper>